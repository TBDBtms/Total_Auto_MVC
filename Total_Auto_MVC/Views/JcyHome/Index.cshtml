<script>
    $(function () {
        ShowCard();
        ShowCXInfo();
    })
    function ShowCX(id) {
        $.ajax({
            url: "http://localhost:11267/api/JcyCards/CarSeriesList",
            data: { id: id },
            dataType: "json",
            Type: "get",
            success: function (data) {
                console.log(data);
                $("#cx").empty();
                for (var i = 0; i < data.length; i++) {
                    var htmls =
                        "<li class='layui-nav-item'>" +
                        "<a href='#' style='color:black'>" + data[i].carserName + "</a></li>";
                    $("#cx").append(htmls);
                }
            }
        })
    }
    function ShowCXInfo() {
        $.ajax({
            url: "http://localhost:11267/api/JcyCards/GetCards",
            dataType: "json",
            type: "get",
            success: function (data) {
                console.log(data);
                for (var i = 0; i < data.length; i++) {
                    var htmls =
                        "<li class='layui-nav-item'>" +
                        "<a href='#' style='color:black'>" + data[i].carserName + "</a></li>";
                    $("#cx").append(htmls);
                }
                ShowCardsInfo();
            }
        })
    }
    function ShowCard() {
        $.ajax({
            url: "http://localhost:11267/api/JcyCards/BrandsList",
            dataType: "json",
            Type: "get",
            success: function (data) {
                console.log(data);
                for (var i = 0; i < data.length; i++) {
                    var htmls =
                        "<li class='layui-nav-item'>" +
                        "<a href='#' style='color:black' onclick='ShowCX(" + data[i].brandId + ")'>" + data[i].brandName + "</a></li>";
                    $("#pp").append(htmls);
                }
                ShowCardTypeInfos();
            }
        })
    }
    function ShowCardTypeInfos() {
        $.ajax({
            url: "http://localhost:11267/api/JcyCards/GetCarSeries",
            dataType: "json",
            type: "get",
            success: function (data) {
                $("#cx").each(function (data) {
                    var cxinfo =
                        "<li class='layui-nav-item' > " +
                        "<a href='#' style='color:black' onclick='CXShowInfo(" + this.brandId + ")'>" + this.brandName + "</a></li>";
                    $("#cx").append(cxinfo);
                })
            }
        })
    }
    function ShowCardsInfo() {
        $.ajax({
            url: "http://localhost:11267/api/JcyCards/CardInfoCofigList",
            dataType: "json",
            type: "get",
            success: function (data) {
                $("#cx").each(function (data) {
                    var cxinfo =
                        "";
                    $("#cx").append(cxinfo); //车辆显示数据
                })
            }
        })
    }
</script>
