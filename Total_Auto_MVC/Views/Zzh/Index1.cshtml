
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index1</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</head>
<body>
    <div class="content"  onclick="location.href ='/Zzh/Index'">
        <a href="#"><img id="pp" src="~/内室/aaa1.png" style="width:100%;height:100%" /></a>
    </div>
    <div class="tip">
    </div>
</body>
</html>
<style>
    html {
        background: #fff;
    }

    * {
        margin: 0px;
        padding: 0px;
    }

    .content {
        position: fixed;
        width: 100%;
        height: 100%;
        text-align: center;
    }

    .tip {
        position: fixed;
        width: 200px;
        text-align: center;
        left: 50%;
        margin-left: -100px;
        margin-top: 20px;
        text-shadow: 1px 1px 3px #333;
    }
</style>
<script>
    var t = 0;
    $(document).ready(function () {
        var xDown,	//鼠标按下x的值
            i = 0,
            isDown = false;
        $(window).on('mousedown', function (e) {
            e.preventDefault();
            xDown = e.clientX;
            isDown = true;
        }).on('mousemove', function (e) {
            e.preventDefault();
            if (isDown) {
                //以鼠标移动十五个像素进行换图
                var moved = e.clientX - xDown;
                if (moved > 15) {
                    i++;
                    if (i > 38) {
                        i = 1;
                    }
                } else if (moved < -15) {
                    i--;
                    if (i < 1) {
                        i = 38;
                    }
                } else {
                    return;
                }
                setImgSrc(i);
                xDown = e.clientX;
            }
        }).on('mouseup', function () {
            isDown = false;
        });
        //自动转
        //setInterval(function () {
        //    setImgSrc();
        //},300)
        //var t = 0;
        function setImgSrc(i) {
            //t++;
            //if (t == 19) {
            //    t = 1;
            //}
            $("#pp").attr('src', '/内室/aaa' + i + ".png");
        }

    });
</script>